<ScrollView xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" 
	android:orientation="vertical"
	android:background="@color/background_holo_light">
    
		<LinearLayout
			android:id="@+id/tableLayout1"
       		android:layout_width="wrap_content"
       		android:layout_height="wrap_content"
       		android:layout_gravity="center_horizontal"
       		android:gravity="center_horizontal"
       		android:orientation="vertical"  >
		        
     		<Button
	            android:id="@+id/dateBtn"
				android:layout_marginTop="20dp"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:background="@drawable/rounded_blue"
	            android:textColor="@color/background_holo_light"
	            android:gravity="center"
	            android:textSize="22dp"
	            android:width="140dp" />

	       	<EditText
                android:id="@+id/unitCostTxtBox"
                android:hint="Cost per Gallon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
				android:layout_marginTop="10dp"
                android:ems="7"
                android:inputType="numberDecimal" />

	
            <EditText
                android:id="@+id/totalCostTxtBox"
                android:hint="Total Cost"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
				android:layout_marginTop="4dp"
                android:ems="7"
                android:inputType="numberDecimal" />

            <EditText
                android:id="@+id/milesTxtBox"
                android:hint="Odometer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
				android:layout_marginTop="4dp"
                android:ems="7"
                android:inputType="number" />

            <CheckBox
                android:id="@+id/isCompleteCB"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
				android:layout_marginTop="4dp"
                android:checked="true"
                android:text=" Filled Tank Completely" />


            <EditText
                android:id="@+id/memoTxtBox"
                android:hint="Memo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:imeOptions="actionDone"
                android:inputType="textCapSentences"
				android:layout_marginTop="4dp"
                android:ems="10" />
            
		</LinearLayout>

</ScrollView>